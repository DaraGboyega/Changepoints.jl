type chpt 
   data::Array{Real}
   changepoints::Array{Int64}
end

# example of use

using Distributions
y = chpt( rand(Normal(),100) ,[])
y.changepoints


## Plotting functions

using Winston
converty.data
plot(y.data)

oplot(s)
s = Slope(1, (0,0), kind="dotted")
add(s)
s


p = FramedPlot(
         aspect_ratio=1,
         xrange=(0,100),
         yrange=(0,100))

# where changepoints are
 s = Slope( Inf , (20,0), kind="dotted")
 setattr(s, label="slope")

 l = Legend(.1, .9, {s})

add(p, s)

help(Slope)
# from example 2 
http://winston.readthedocs.org/en/latest/examples.html#example-2

function addone(x::chpt)
  push!(x.changepoints,1)
end

addone(y)
y.changepoints

# plotting function would take chpt type and plot with vertical lines
